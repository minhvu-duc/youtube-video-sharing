{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@tests/*": ["src/tests/*"],
      "@config/*": ["./config/*"],
      "@database/*": ["./database/*"],
      "@entity/*": ["./entity/*"],
      "@logger/*": ["./logger/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": ["src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
